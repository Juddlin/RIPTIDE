<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#93D2F0"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="wsuteams.riptide.RunningActivity"
    tools:showIn="@layout/activity_running">

    <!-- Logo Layout -->
    <ImageView
        android:id="@+id/riptideLogo"
        android:src="@drawable/riptide_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="467dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!-- Log Off Button -->
    <Button
        android:layout_height="70dp"
        android:layout_width="140dp"
        android:text="Log Off"
        android:id="@+id/logOffButton"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/riptideLogo"
        android:layout_alignEnd="@+id/riptideLogo" />

    <!-- Server Text Field -->
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textShortMessage|textMultiLine"
        android:id="@+id/serverTextField"
        android:hint="Enter Server"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp" />

    <!-- Heart Rate Monitor Switch -->
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:switchMinWidth="56dp"
        android:text="Heart Rate Monitor: "
        android:id="@+id/heartRateMonitorSwitch"
        android:checked="false"
        android:layout_marginBottom="49dp"
        android:layout_above="@+id/logOffButton"
        android:layout_centerHorizontal="true" />

    <!-- Time Interval Seek Bar -->
    <SeekBar
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/timeIntervalSeekBar"
        android:max="5"
        android:progress="0"
        android:indeterminate="false"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <!-- Time Interval Label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Time Interval: 0 Minutes"
        android:id="@+id/timeIntervalLabel"
        android:layout_above="@+id/timeIntervalSeekBar"
        android:layout_centerHorizontal="true" />

    <!-- Heart Rate Monitor Indicator Button -->
    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heart Rate Monitor Status"
        android:id="@+id/heartRateMonitorStatusSignalButton"
        android:checked="false"
        android:layout_above="@+id/heartRateMonitorSwitch"
        android:layout_centerHorizontal="true" />

    <!-- Heart Rate Monitor Status Label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Heart Rate Monitor Status"
        android:id="@+id/heartRateMonitorStatusLabel"
        android:layout_above="@+id/heartRateMonitorStatusSignalButton"
        android:layout_centerHorizontal="true" />

    <!-- Begin Button -->
    <Button
        android:layout_height="70dp"
        android:layout_width="140dp"
        android:text="Begin"
        android:id="@+id/beginButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
